<mvc:View controllerName="ui5-template.ui5-template.controller.MainView"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
	xmlns="sap.ui.table"
	xmlns:m="sap.m"
	xmlns:c="sap.ui.core">
	<m:Page id="page" showHeader="false">
		<m:subHeader>
			<m:Toolbar>
				<m:SearchField width="100%" search=".onSearch" />
			</m:Toolbar>
		</m:subHeader>
		<m:content>
			<Table id="tabela" rows="{invoicesModel>/results}" selectionMode="None">
				<noData>
					<m:Text text="Nenhuma tarefa encontrada." />
				</noData>
				<columns>
					<Column width="50rem">
						<m:Label text="Nome" />
						<template>
							<m:Text text="{invoicesModel>title}" />
						</template>
					</Column>
					<Column hAlign="Center">
						<m:Label text="Completado" />
						<template>
							<m:HBox justifyContent="Start">
								<m:CheckBox selected="{invoicesModel>completed}" />
							</m:HBox>
						</template>
					</Column>
					<Column hAlign="Center">
						<m:Label text="Detalhes" />
						<template>
							<m:Button class="customRoundedButton" icon="sap-icon://inspect" press="handleDetailsPress" width="100%" />
						</template>
					</Column>
				</columns>
			</Table>
		</m:content>
	</m:Page>
</mvc:View>
